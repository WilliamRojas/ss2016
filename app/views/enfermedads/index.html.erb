<div class="index">
<center class="fadeIn"><h1><b>ENFERMEDADES</b></h1></center><br><br>

<div class="buscador">
	<%= form_tag enfermedads_path, :method => 'get' do %>
	<% content_tag :label do %>
	Fecha:
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
	<% end %>
</div>

<div class="ctable">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Funcionario</th>
      <th>Tipo de enfermedad</th>
       <th>Descripcion</th>
       <th>Fecha</th>
      <th>Codigo de diagnostico</th>
      
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
     <%= render @enfermedads %>
  </tbody>
</table>
</div>
<br>

 
 <% if can? :create, @enfermedad%>
<%= button_to 'Nueva Enfermedad', new_enfermedad_path, remote: true, :method=>"get", class: "btn btn-primary btn-xs" %> 
<%end%><br>

<div class="descarga">
<p>
  Descarga:
  <%= link_to "CSV", enfermedads_path(format: "csv") %> |
  <%= link_to "Excel", enfermedads_path(format: "xls") %>
</p>
</div>


<%= will_paginate @enfermedads, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
Enfermedads: <%= @enfermedads.count %>
 

</div>