<div class="index">

<center class="fadeIn"><h1><b>INCIDENTES</b></h1></center><br><br>

<div class="buscador">
	<%= form_tag incidentes_path, :method => 'get' do %>
	<% content_tag :label do %>
	Fecha del reporte:
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
	<% end %>
</div>
<div class="ctable">
<table class="table table-striped">
  <thead>
    <tr> 
      <th>Funcionario</th>
      <th>Tipo de incidente</th>
      <th>Area o proceso</th>
      <th>Fecha del reporte</th>
      <th>Personal involucrado</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
     <%= render @incidentes %>
  </tbody>
</table>
</div>
<br>

<% if can? :create, @incidente%>
<%= button_to 'Nuevo Incidente', new_incidente_path, :method=>"get", class: "btn btn-primary btn-xs" %> 
<%end%>
<br>

<div class="descarga"><p>
<p>
  Descarga:
  <%= link_to "CSV", incidentes_path(format: "csv" ) %> |
  <%= link_to "Excel", incidentes_path(format: "xls") %>
</p>
</div>

<%= will_paginate @incidentes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
Incidentes: <%= @incidentes.count %>
 

</div>