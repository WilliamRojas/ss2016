<%= simple_form_for(@album, :html => { :class     => 'form-horizontal', 
                                       :remotipart => true,
                                       :remote    => true } ) do |f| %>

  <%= f.error_notification %>
  <div class="field">
  	<%= f.label :image %>
  	<%= f.file_field :image %>
  </div>
  <div class="form-inputs">
    <%= f.input :recomendacion %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Insertar" %>
  </div>
<% end %>
