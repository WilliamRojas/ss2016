<h1>Lista de  personal involucrado</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personalinvolucrados.each do |personalinvolucrado| %>
      <tr>
        <td><%= personalinvolucrado.nombre %></td>
        <td><%= link_to 'Ver', personalinvolucrado %></td>
        <td><%= link_to 'Editar', edit_personalinvolucrado_path(personalinvolucrado) %></td>
        <td><%= link_to 'Eliminar', personalinvolucrado, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Personal involucrado', new_personalinvolucrado_path %>
