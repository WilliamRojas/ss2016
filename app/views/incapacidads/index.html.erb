<div class="index">

<center class="fadeIn"><h1><b>INCAPACIDADES</b></h1></center><br><br>

<div class="buscador">
	<%= form_tag incapacidads_path, :method => 'get' do %>
	<% content_tag :label do %>
	Fecha inicio:
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
	<% end %>
</div>

<div class="ctable">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Funcionario</th>
       <th>Tipo de incapacidad</th>
      <th>Fecha inicio</th>
      <th>Fecha terminaci√≥n</th>
      <th>Total dias</th>
      <th>Dias acobrar</th>
      <th>Prorroga</th>
      
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
     <%= render @incapacidads %>
  </tbody>
</table>
</div>
<br>

  <% if can? :create, @incapacidad%>
  <%= button_to 'Nueva Incapacidad', new_incapacidad_path, remote: true, :method=>"get", class: "btn btn-primary btn-xs" %> 
  <%end%><br>

<div class="descarga"><p>
  <p>
    Descarga:
    <%= link_to "CSV", incapacidads_path(format: "csv") %> |
    <%= link_to "Excel", incapacidads_path(format: "xls") %>
  </p>
</div>

  <%= will_paginate @incapacidads, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
  Incapacidads: <%= @incapacidads.count %>


</div>



 

