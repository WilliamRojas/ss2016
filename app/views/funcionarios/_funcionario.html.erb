<tr id=<%= "funcionario_#{funcionario.id}" %>> 
  
        <td><%= funcionario.nombres %></td>
        <td><%= funcionario.apellidos %></td>
        <td><%= funcionario.tipodoc.nombre rescue nil %></td>
        <td><%= funcionario.identificacion %></td> 
        <td><%= funcionario.edad %></td>
        <td><%= mostrar_genero(funcionario.genero )%></td>
        <td><%= funcionario.telefono %></td>
        <td><%= funcionario.mail %></td> 
        <td><%= funcionario.cargo %></td>
        <td><%= funcionario.area %></td>
        <td><%= funcionario.antiguedad %></td>
        <td><%= funcionario.eps %></td>
        <td><%= funcionario.afp %></td>
        <td><%= funcionario.arl %></td>

        
   
    <% if can? :read, funcionario %>
     <td><%= link_to 'Ver', funcionario,  class: "btn btn-success btn-xs" %></td>
    <% end %>

    <% if can? :update, funcionario %>
       <td><%= link_to 'Editar', edit_funcionario_path(funcionario), class: "btn btn-warning btn-xs" %></td>
    <% end %>

     <% if can? :destroy, funcionario %>
       <td><%= link_to 'Eliminar', funcionario, method: :delete, data: { confirm: 'Esta Seguro?' }, class: "btn btn-danger btn-xs"  %></td>
    <% end %>
</tr>